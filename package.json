{
  "name": "mpvue-bot",
  "version": "1.0.0",
  "description": "A probot app for mpvue",
  "author": "hunnble <hante_hunter@163.com>",
  "license": "ISC",
  "repository": "https://github.com/hunnble/mpvue-bot.git",
  "homepage": "https://github.com/hunnble/mpvue-bot",
  "bugs": "https://github.com/hunnble/mpvue-bot/issues",
  "keywords": [
    "mpvue",
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^7.0.0",
    "probot-stale": "^1.1.0"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.0",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "probot": {
    "apps": [
      "probot-stale"
    ]
  }
}
